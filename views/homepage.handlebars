<!-- Loop over each object in the projects array -->
<main class="before-login-main">

  <div class="container">
    <div class="pic-container">
      <img src="./img/steam_pic.jpg" alt="steam-logo" class="steam-logo" />
      <div class="overlay">
        <a class="steam-logo" href="https://store.steampowered.com/"><div
            class="text"
          >Click here to visit Steam website</div></a>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-content">
      <p id="hometext">mySteamlist is a webpage designed for user to add steam
        games to a wishlist or add it to favorite games, and also be able to
        rate and review the game</p>
    </div>
  </div>

</main>

{{#if logged_in}}
  {{#each projects as |project|}}
    <div class="row mb-4 project">
      <div class="col-md-5">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          {{{get_emoji}}}
          <a href="/favorite/{{favorite.id}}">{{favorite.name}}</a>
        </h2>
        <p>
          <span for="img" aria-label="money">ðŸ’²</span>
          <!-- Pass needed_funding value to the helper function -->
          <span class="dollar-amount">{{format_amount
              favorite.needed_funding
            }}</span>
          needed!
        </p>
        <p>Created by {{favorite.user.name}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{favorite.description}}
        </p>
      </div>
    </div>
  {{/each}}
{{/if}}