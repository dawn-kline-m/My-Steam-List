<form class="form new-favorite-form">
  <div class="form-group">
    <label for="favorite-name" style="color: #2A475E; font-size: 3em;">Game
      Title:</label>
    <input
      class="form-input"
      type="text"
      id="game-title"
      name="favorite-name"
    />
  </div>
  <div class="form-group">
    <label
      for="favorite-funding"
      style="color: #2A475E; font-size: 3em;"
    >price:</label>
    <input
      class="form-input"
      type="number"
      id="price"
      name="favorite-funding"
    />
  </div>
  <div class="form-group">
    <label
      for="favorite-desc"
      style="color: #2A475E; font-size: 3em;"
    >Why do you want it?:</label>
    <textarea id="reviewArea" class="materialize-textarea"></textarea>
  </div>
  <button href="#" class="btn #0d47a1 blue darken-4" id="wishlistButton">
    <span>Create</span>
    <i class="material-icons right">send</i>
  </button>
</form>
<script src="./js/wishlist.js"></script>