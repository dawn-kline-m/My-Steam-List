<form class="form new-favorite-form">
  <div class="form-group">
    <label for="favorite-name" style="color: #2A475E; font-size: 3em;">Game
      Title:</label>
    <input class="form-input" type="text" id="game-title" name="game-title" />
  </div>
  <div class="form-group">
    <label
      for="favorite-funding"
      style="color: #2A475E; font-size: 3em;"
    >Rating:</label>
    <input class="form-input" type="number" id="rating" name="rating" />
  </div>
  <div class="form-group">
    <label
      for="favorite-desc"
      style="color: #2A475E; font-size: 3em;"
    >Review:</label>
    <textarea
      id="reviewArea"
      class="materialize-textarea"
      name="reviewArea"
    ></textarea>
  </div>
  <button type="submit" class="btn #0d47a1 blue darken-4">
    Create
    <i class="material-icons right">send</i>
  </button>
</form>